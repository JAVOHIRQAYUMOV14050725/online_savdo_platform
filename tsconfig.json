{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@interfaces":["./src/interfaces"],
      "@models":["./src/models"],
      "@routes":["./src/routes"],
      "@config":["./src/config"],
      "@errors":["./src/middleware"],
      "@utils":["./src/utils"],
      "@controllers":["./src/controllers"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",    
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
